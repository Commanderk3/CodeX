{
  "compilerOptions": {
    "target": "ES2022",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "noImplicitAny": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots":  ["./types", "./node_modules/@types"],
  },
  "include": ["src", "src/types/global.ts"],
  "exclude": ["node_modules", "dist"]
}
